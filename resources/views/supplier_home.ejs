<section class="hero py-16">
    <div class="container mx-auto flex items-center justify-between">
        <div class="w-1/2">
            <h6 class="text-lg"><em>Need deliveries?</em></h6>
            <h1 class="text-6xl font-bold">Use ParCour!</h1>
            <button class="px-6 py-2 rounded-full text-white text-white font-bold mt-4 btn-primary">Book Now</button>
        </div>
        <div>
            <img src="/img/hero-pizza.png" alt="pizza">
        </div>
    </div>
</section>
<% if(user.role!='service_provider') { %>
<section class="menu container mx-auto py-8">
    <h1 class="text-xl font-bold mb-8">All Vehicles</h1>
    <div class="grid grid-cols-4 col-gap-12 row-gap-16">
        <% parcels.forEach(function(parcel){ %>
        <div class="h-1/2 w-64 bg-white border rounded-lg overflow-hidden shadow-lg pb-2">
            <div class="relative pb-1/3">
                <img class="object-cover h-40 w-full items-center mb-4 mx-auto" src="/img/<%= parcel.image %>" alt="">
            </div>
            <div class="text-center">
                <h2 class="mb-4 text-lg"><%= parcel.vehicle_type %></h2>
                <span class="py-1 px-4 rounded-full text-xs"><%= parcel.weight %></span>
                <div class="flex items-center justify-around">
                    <span class="font-bold text-lg">â‚±<%= parcel.price %></span>
                    <button data-parcel="<%= JSON.stringify(parcel) %>" type="button" id="add-to-parcel"
                        class="add-to-parcel py-1 px-6 rounded-full flex items-center font-bold">
                        <span>+</span>
                        <span class="ml-4">Book</span>
                    </button>
                </div>
            </div>
        </div>

        <% }) %>

    </div>
    <br>
</section>
<% } %>
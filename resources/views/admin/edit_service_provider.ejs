<%- include('../_layouts/admin_header') %>
<section id="move-content" class="editserviceprovider">
    <h2 class="font-bold text-lg mb-4 px-4">Edit a Category</h2>
    <div class="px-4">
        <button type="button" class="add-serviceprovider btn-primary text-white block font-bold py-2 px-5 rounded"><a
                href="/admin/service_providers">Back to all Service Providers</a></button>
    </div>
    <br><br>

    <div class="w-full items-center justify-center content-center">
        <form method="POST" action="/admin/edit_service_provider/<%= id %>" class="bg-white px-8 pt-2 pb-8 mb-4">
            <% if (messages.success) { %>
            <span class="text-green-500 text-sm"><%= messages.success %> </span>
            <% } %>
            <% if (messages.error) { %>
            <span class="text-red-500 text-sm"><%= messages.error %> </span>
            <% } %>
            <div class="form-group p-4">
                <label for="">Name</label>
                <input type="text" maxlength="20"
                    class="form-control block shadow appearance-none border rounded w-1/5 py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
                    id="name" name="name" value="<%= name %>"
                    placeholder="Input a Name ">
            </div>
            <div class="form-group p-4">
                <label for="">Address</label>
                <input type="text" maxlength="50"
                    class="form-control block shadow appearance-none border rounded w-1/2 py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
                    id="address" name="address" value="<%= address %>" placeholder="Input address">
            </div>

            <div class="px-4 py-2">
                <button id="editServiceProvider"
                    class="btn-primary rounded-full text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline"
                    type="submit">
                    Edit
                </button>
            </div>
        </form>
        <% if (service_providerEdited) { %>
        <script>
            Swal.fire({
                timer: 1500,
                showConfirmButton: false,
                title: 'Service Provider Edited',
                text: 'Service Provider has been edited successfully!',
                type: 'success',
                icon: 'success'
            })
        </script>

        <% } %>
    </div>
    </div>
</section>
</body>
</html>